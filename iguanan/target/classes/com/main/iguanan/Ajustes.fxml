<VBox fx:id="gradient" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.iguanan.SecundaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <StackPane prefHeight="720" prefWidth="1366">
         <children>
            <MediaView fx:id="mediaView" opacity="0.52" />
            <Button fx:id="botonAlien" mnemonicParsing="false" opacity="0.52" styleClass="botonMenu" text="JUGAR">
               <StackPane.margin>
                  <Insets right="1250.0" top="400.0" />
               </StackPane.margin> 
               <font>
                  <Font name="Segoe UI Semibold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="botonAlien1" mnemonicParsing="false" onAction="#salirajustesClick" opacity="0.52" styleClass="botonMenu" text="AJUSTES">
               <font>
                  <Font name="Segoe UI Semibold" size="18.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <StackPane.margin>
                  <Insets right="1250.0" top="500.0" />
               </StackPane.margin>
            </Button>
            <Button fx:id="botonAlien11" mnemonicParsing="false" onAction="#salirClick" opacity="0.52" styleClass="botonMenu" text="SALIR">
               <font>
                  <Font name="Segoe UI Semibold" size="18.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <StackPane.margin>
                  <Insets right="1250.0" top="600.0" />
               </StackPane.margin>
            </Button>
            <ImageView fitHeight="160.0" fitWidth="212.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Logo.png" />
               </image>
            </ImageView>
         </children>
      </StackPane>
   </children>
</VBox>
