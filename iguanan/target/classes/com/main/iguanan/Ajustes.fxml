<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.main.iguanan.AjustController">
   <children>
      <StackPane prefHeight="720.0" prefWidth="1280.0">
         <children>
            <ImageView fx:id="image" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@menuAjustes.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER" spacing="20">
               <children>
                  <Button fx:id="botonJugar" onAction="#jugarClick" styleClass="botonMenu" text="JUGAR" />
                  <Button fx:id="botonAjustes" onAction="#salirajustesClick" styleClass="botonMenu" text="AJUSTES" />
                  <Button fx:id="botonSalir" onAction="#salirClick" styleClass="botonMenu" text="SALIR" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</VBox>
